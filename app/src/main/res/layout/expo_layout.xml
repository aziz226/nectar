<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="174.32dp"
    android:layout_height="189.51dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/row"
    android:id="@+id/id_expo_lay"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="10dp"
    android:padding="8dp"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/id_expo_pic"
        android:layout_width="111dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_apple" />

    <TextView
        android:id="@+id/id_expo_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/gilroy_bold"
        android:text=" Red Apple"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_expo_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>